<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line">

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtInvoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cashier:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtUser"
                    android:gravity="center"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUser"
                    android:text="Customer:"
                    android:textColor="@android:color/black"

                    />

                <TextView
                    android:id="@+id/txtCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtUser"
                    android:layout_toRightOf="@+id/txtCustomer"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCustomer"
                    android:text="POS:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/txtPosNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCustomer"
                    android:layout_toRightOf="@+id/txtPos"
                    android:textColor="@android:color/black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/discLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_line">

                <TextView
                    android:id="@+id/txtTotalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />

                <TextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />

                <TextView
                    android:id="@+id/txtDiscName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtTotalName"
                    android:gravity="center"
                    android:text="Discount"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />


                <TextView
                    android:id="@+id/txtDiscAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtTotalAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />

                <TextView
                    android:id="@+id/txtNetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtDiscName"
                    android:gravity="center"

                    android:text="Net"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/main_title_text_size" />

                <TextView
                    android:id="@+id/txtNetAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtDiscName"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@android:color/black"

                    android:textSize="@dimen/main_title_text_size" />

                <TextView
                    android:id="@+id/txtCashName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtNetAmount"
                    android:gravity="center"
                    android:text="Cash"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />


                <TextView
                    android:id="@+id/txtCashAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtNetAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />


                <TextView
                    android:id="@+id/txtBalanceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtCashAmount"
                    android:gravity="center"
                    android:text="Balance"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />


                <TextView
                    android:id="@+id/txtBalanceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/txtCashAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/custom_text_size" />



            </RelativeLayout>
            <Button
                android:id="@+id/btn_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="print invoice"
                android:textColor="@android:color/white"
                android:theme="@style/Theme.MaterialButton" />

            <Button
                android:id="@+id/btn_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="new invoice"

                android:textColor="@android:color/white"
                android:theme="@style/Theme.MaterialButton" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>